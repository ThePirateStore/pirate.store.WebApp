@model PS_WebApp.Models.CreateItemViewModel

@{
    ViewBag.Title = "Index";
}
<h3>List of items</h3>
<br />
@Html.ActionLink("Crea un nuevo artículo", "Create", "Items")
<hr />
<br />
@if (Model.ItemList.Count() <= 0)
{
    <h2> No existe ningun artículo aun!</h2>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item.MegaURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item.CoffeeURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item.DateModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item.IsDonated)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.ItemList)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MegaURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoffeeURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDonated)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        }

    </table>
}
